<div class="col col-md-4">
  <%= form_with model: [:admin, @test], local: true do |form| %>
    <div class="form-group">
      <%= render 'shared/errors', resource: @test %>
      <%= form.hidden_field :author_id, value: current_user.id %>

      <p>
        <%= form.label :title %><br>
        <%= form.text_field :title, id: :test_title, class: 'form-control' %>
      </p>

      <p>
        <%= form.label :level %><br>
        <%= form.number_field :level, id: :test_level, class: 'form-control' %>
      </p>

      <p>
        <%= form.label :timer %><br>
        <%= form.number_field :timer, id: :test_timer, class: 'form-control' %>
      </p>

      <p>
        <%= form.label :category_id %>:
        <%= form.collection_select :category_id, Category.all, :id, :title, {prompt: "Select a category"}, {class: "form-control"} %>
      </p>

      <p><%= form.submit class: 'btn btn-primary' %></p>
    </div>
  <% end %>
</div>
